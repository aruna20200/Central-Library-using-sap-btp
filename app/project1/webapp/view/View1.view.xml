<mvc:View
    xmlns:layout="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="com.app.project1.controller.View1"
    displayBlock="true"
    xmlns="sap.m"
>
    <App id="idApp">
        <Page id="idPage" class="background" showHeader="false">
            <VBox id="idVBox"
                justifyContent="Center"
                alignItems="Center"
                width="100%"
                height="100%"
            >
                <Title
                    id="idCentralLibrarySystemTitle"
                    text="Central Library"
                    level="H1"
                    class="title"
                />
                <HBox id="idHBox">
                    <Button
                        id="idBtnAdminLogin"
                        text="Login"
                        type="Emphasized"
                        press="onLoginDialogPress"
                        class="button-spacing"
                    />
                    <Button
                            id="idBtnSighup"
                            text="Sign-Up"
                            icon="sap-icon://add-employee"
                            tooltip="Add New User"
                            type="Emphasized"
                            press="onSignUpUserPress"
                        />
                </HBox>
            </VBox>
        </Page>
    </App>
</mvc:View>