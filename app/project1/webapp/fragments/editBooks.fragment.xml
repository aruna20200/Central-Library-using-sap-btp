<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idBtnEdit1"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Edit BOOK Details"
    >
        <beginButton>
            <Button
                id="idEditBookSave1"
                text="Save"
                press="onSave1"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idEditBookCancel"
                text="Cancel"
                press="onClose1"
                type="Negative"
            />
        </endButton>
        <content>
            <!-- form creation -->
            <form:SimpleForm
                id="idEditBookForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                
                <Label
                    id="idtitleLabel1"
                    text="Title"
                />
                <Input
                    id="idtitleInput1"
                    value="{newBookModel>/title}"
                />
                <Label
                    id="idAuthor1"
                    text="Author"
                />
                <Input 
                    id="idAuthorInput1"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{newBookModel>/author}"
                />
                <Label
                    id="idISBNLabel1"
                    text="ISBN"
                />
                <Input
                    id="idISBNInput1"
                    value="{newBookModel>/ISBN}"
                />
                <Label
                    id="idQuantity1"
                    text="Quantity"
                />
                <Input 
                    id="idQuantityInput1"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{newBookModel>/quantity}"
                />
                <Label
                    id="idAQuantity1"
                    text="AValiableQuantity"
                />
                <Input 
                    id="idAQuantityInput1"
                    editable="false"
                    valueLiveUpdate="true"
                    value="{newBookModel>/Aquantity}"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
