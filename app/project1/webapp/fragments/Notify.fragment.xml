<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idloginDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Login Details"
    >
        <customHeader>
            <Bar>
            <contentLeft>
            <Text text="Notifications"></Text>
            </contentLeft>
                <contentRight>
                    <Button
                        id="cancelbtn"
                        icon="sap-icon://sys-cancel"
                        press="onCloseDialog"
                        type="Reject"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        	<Table
        id="idUserLoans"
         
        alternateRowColors="true"
        backgroundDesign="Transparent"
       items="{Bookloans}"
        
    >
        <columns>
            <Column id="idIsbnColumn">
                <Title
                    id="idIsbntitle"
                    text="Notification about Issued books"
                />
            </Column>
           
        </columns>

        <items>
            <ColumnListItem id="idColumnListBooksLoan">
                <cells>
                    <Text
                        id="idBISBNvalue"
                        text="{notify} on {issueDate}"
                    />
                    
                </cells>
            </ColumnListItem>
        </items>
    </Table>
       
        
    </Dialog>
</core:FragmentDefinition>