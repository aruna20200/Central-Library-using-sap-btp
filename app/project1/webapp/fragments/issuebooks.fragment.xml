
<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        id="idIssueBook"
        resizable="false"
        draggable="true"
        contentWidth="35%"
        title="Issue Books"
    >
        <beginButton>
            <Button
                id="idIssueBtn"
                text="Issue Book"
                press="onIssueBookPress"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelIssue"
                text="Cancel"
                press="onCloseIssueBookPress"
                type="Negative"
            />
        </endButton>
 
        <content>
            <form:SimpleForm
                id="idIssueBookForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idIDLable1"
                    text="ID"
                />
                <Input id="idIDInput1" value="{localModel>/ID}" />
                <Label
                    id="iduser_IDLable1"
                    text="user_ID"
                />
                <Input
                    id="iduser_IDInput1"
                    value="{localModel>/user_ID}"
                />
                <Label
                    id="idissueDate"
                    text="issueDate"
                />
                <Input id="idissueDate1Input" value="{localModel>/issueDate}" />
 
                <Label
                    id="idissuereturnDate"
                    text="returnDate"
                />
                <Input id="idreturnDate" value="{localModel>/returnDate}"/>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
 