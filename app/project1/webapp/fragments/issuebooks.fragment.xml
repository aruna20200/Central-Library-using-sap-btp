<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idissuebooksDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Issue Books Details"
    >
        <customHeader>
            <Bar>
                <contentLeft>
                    <Text text="Issue Books Details" />
                </contentLeft>
                <contentRight>
                    <Button
                        id="onissuecancelbtn"
                        icon="sap-icon://sys-cancel"
                        press="onissuebookscancelbtn"
                        type="Reject"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <VBox
            class="cancelbtn"
            alignItems="End"
        />
        <VBox
            class="sapUiSmallMargin"
            alignItems="Center"
        >
            <Table
                class="issuebooksheader"
                id="issuebooksTable"
                mode="MultiSelect"
                alternateRowColors="true"
                items="{ path:'/Reservations',  parameters : {
            $count : true
           
        }}"
            >
                <headerToolbar>
                    <OverflowToolbar
                        id="IssueBooksTableHeader"
                        class="issuebookheader"
                    >
                        <Title
                            id="idIssueBooksTableHeaderTitle"
                            class="classTableHeaderTitle"
                            text="Total Issue Books: {/Issuances/$count}"
                        />

                        <Button
                            id="idreservebtn"
                            text="Issue"
                            press="onReservebtnpress"
                            type="Emphasized"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Book Id" />
                    </Column>
                    <Column>
                        <Text text="ISBN" />
                    </Column>
                    <Column>
                        <Text text="Reservation Id" />
                    </Column>
                    <Column>
                        <Text text="User Id" />
                    </Column>
                    <Column>
                        <Text text="UserName" />
                    </Column>
                    <Column>
                        <Text text="Title" />
                    </Column>
                    <Column class="issuebookheader">
                        <Text text="Request Date" />
                    </Column>

                    <Column
                        class="idAQuantity2"
                        visible="false"
                    >
                        <Text text="AvaliableQuantity" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{book/ID}" />
                            <Text text="{book/ISBN}" />
                            <Text text="{book/Aquantity}" />
                            <Text text="{ID}" />
                            <Text text="{user/ID}" />
                            <Text text="{user/username}" />
                            <Text text="{book/title}" />
                            <Text text="{reservedDate}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
